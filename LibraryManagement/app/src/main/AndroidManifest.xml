<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LibraryManagement" >
        <activity
            android:name=".SelectBookScreen"
            android:exported="false"
            android:label="@string/title_activity_select_book_screen"
            android:theme="@style/Theme.LibraryManagement" />
        <activity
            android:name=".Routes"
            android:exported="false"
            android:label="@string/title_activity_routes"
            android:theme="@style/Theme.LibraryManagement" />
        <activity
            android:name=".Screens"
            android:exported="false"
            android:label="@string/title_activity_screens"
            android:theme="@style/Theme.LibraryManagement" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LibraryManagement" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>